# YouTube Viewer Bot Configuration
# Copy this file and rename to .env, then edit the values

# Your YouTube live stream URL (REQUIRED)
STREAM_URL=https://www.youtube.com/watch?v=YOUR_STREAM_ID

# Number of concurrent viewers (1-50)
VIEWER_COUNT=10

# Maximum duration per session in minutes (0 = unlimited)
MAX_DURATION_MINUTES=0

# How often to restart viewers in hours (recommended: 4-8 hours)
RESTART_INTERVAL_HOURS=6

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO